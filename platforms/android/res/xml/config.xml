<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="4031" id="pro.rudloff.openvegemap" version="0.4.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.geolocation.Geolocation" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="UniversalLinks">
        <param name="android-package" value="com.nordnetab.cordova.ul.UniversalLinksPlugin" />
        <param name="onload" value="true" />
    </feature>
    <name>OpenVegeMap</name>
    <description>
        OpenVegeMap Cordova app
    </description>
    <author email="contact@rudloff.pro" href="http://cordova.io">
        Pierre Rudloff
    </author>
    <content src="index.html" />
    <icon src="www/img/logo_512.png" />
    <access origin="https://maps.wikimedia.org" />
    <access origin="https://overpass-api.de" />
    <access origin="https://nominatim.openstreetmap.org" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <exclude-files pattern="node_modules/onsenui/*-src/" />
    <exclude-files pattern="node_modules/onsenui/js/onsenui.js" />
    <exclude-files pattern="node_modules/onsenui/js/angular-*" />
    <exclude-files pattern="node_modules/onsenui/css/*-css-components.css" />
    <exclude-files pattern="node_modules/onsenui/css/*/fonts/*.svg" />
    <exclude-files pattern="node_modules/onsenui/css/*/fonts/*.eot" />
    <exclude-files pattern="node_modules/onsenui/css/*/fonts/*.ttf" />
    <exclude-files pattern="node_modules/onsenui/css/*/fonts/*.otf" />
    <exclude-files pattern="node_modules/core-js/" />
    <exclude-files pattern="node_modules/@onsenui/" />
    <exclude-files pattern="node_modules/leaflet-plugins/debug/" />
    <exclude-files pattern="node_modules/leaflet-plugins/examples/" />
    <exclude-files pattern="node_modules/leaflet/src/" />
    <exclude-files pattern="node_modules/leaflet/dist/*-src.js" />
    <exclude-files pattern="node_modules/leaflet/dist/*.map" />
    <universal-links>
        <host name="openvegemap.netlib.re" scheme="https" />
        <host name="openvegemap.netlib.re" scheme="http" />
    </universal-links>
    <preference name="loglevel" value="DEBUG" />
    <preference name="android-minSdkVersion" value="19" />
</widget>
